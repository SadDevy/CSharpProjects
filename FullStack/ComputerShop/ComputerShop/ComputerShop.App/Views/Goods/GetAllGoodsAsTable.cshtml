@model IEnumerable<Good>


<table>
    <thead>
        <tr>
            <th>Код</th>
            <th>Название</th>
            <th>Цена</th>
            <th>Картинка</th>
            <th>Количество</th>
            <th>Код подкаталога</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Good goods in Model)
        {
            <tr>
                <td>@goods.Id</td>
                <td>@goods.Name</td>
                <td>@goods.Price</td>
                <td>
                    @if (goods.Picture != null)
                    {
                        <a asp-controller="Goods" asp-action="GetImage" asp-route-id="@goods.Id" class="td__link">Изображение</a>
                    }
                </td>
                <td>@goods.Count</td>
                <td>@goods.SubcatalogId</td>
                <td>
                    <a asp-controller="Goods" asp-action="Change" asp-route-id="@goods.Id" class="td__link">Изменить</a>
                    /
                    <a asp-controller="Goods" asp-action="Delete" asp-route-id="@goods.Id" class="td__link">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>